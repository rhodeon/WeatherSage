<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".location.ZipcodeEntryFragment">

    <ImageView
        android:id="@+id/cloud_icon"
        android:layout_width="@dimen/cloud_icon_size"
        android:layout_height="@dimen/cloud_icon_size"
        android:src="@drawable/ic_baseline_cloud_24"
        app:layout_constraintBottom_toTopOf="@+id/zipcode_prompt"
        app:layout_constraintEnd_toEndOf="@+id/zipcode_prompt"
        app:layout_constraintStart_toStartOf="@+id/zipcode_prompt"
        />

    <TextView
        android:id="@+id/zipcode_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/zipcode_prompt"
        android:textSize="@dimen/prompt_font_size"
        app:layout_constraintBottom_toTopOf="@+id/input_zipcode"
        app:layout_constraintEnd_toEndOf="@+id/input_zipcode"
        app:layout_constraintStart_toStartOf="@+id/input_zipcode" />

    <EditText
        android:id="@+id/input_zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/input_zipcode"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        app:layout_constraintEnd_toEndOf="@+id/input_zipcode"
        app:layout_constraintStart_toStartOf="@+id/input_zipcode"
        app:layout_constraintTop_toBottomOf="@+id/input_zipcode" />


</androidx.constraintlayout.widget.ConstraintLayout>