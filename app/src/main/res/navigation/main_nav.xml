<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    tools:ignore="InvalidNavigation,UnusedNavigation">

    <fragment
        android:id="@+id/zipcodeEntryFragment"
        android:name="com.rhodeon.weathersage.location.ZipcodeEntryFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_zipcode_entry" >
        <action
            android:id="@+id/action_zipcodeEntryFragment_to_currentForecastFragment4"
            app:destination="@id/currentForecastFragment" />
    </fragment>
    <fragment
        android:id="@+id/currentForecastFragment"
        android:name="com.rhodeon.weathersage.forecast.CurrentForecastFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_current_forecast" >
        <action
            android:id="@+id/action_currentForecastFragment_to_zipcodeEntryFragment2"
            app:destination="@id/zipcodeEntryFragment" />
        <action
            android:id="@+id/action_currentForecastFragment_to_forecastDetailsFragment"
            app:destination="@id/forecastDetailsFragment" />
<!--        <argument-->
<!--            android:name="zipcode"-->
<!--            app:argType="string" />-->
    </fragment>
    <fragment
        android:id="@+id/forecastDetailsFragment"
        android:name="com.rhodeon.weathersage.details.ForecastDetailsFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_forecast_details" >
        <argument
            android:name="maxTemp"
            app:argType="float" />
        <argument
            android:name="description"
            app:argType="string" />
        <argument
            android:name="minTemp"
            app:argType="float" />
        <argument
            android:name="iconId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/weeklyForecastFragment"
        android:name="com.rhodeon.weathersage.forecast.WeeklyForecastFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_weekly_forecast" >
        <action
            android:id="@+id/action_weeklyForecastFragment_to_zipcodeEntryFragment"
            app:destination="@id/zipcodeEntryFragment" />
        <action
            android:id="@+id/action_weeklyForecastFragment_to_forecastDetailsFragment"
            app:destination="@id/forecastDetailsFragment" />
    </fragment>
</navigation>